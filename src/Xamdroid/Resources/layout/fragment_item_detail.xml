<?xml version="1.0" encoding="utf-8"?>

<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/fragment_item_detail_text" />

    <TextView
        android:id="@+id/fragment_item_detail_text"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/fragment_item_detail_description" />

    <TextView
        android:id="@+id/fragment_item_detail_description"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

</LinearLayout>